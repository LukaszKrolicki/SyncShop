<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#A0FF40" /> <!-- Set the background color when the button is pressed -->
            <corners android:radius="16dp" /> <!-- Set the corner radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/light_green"
                android:endColor="@color/dark_green"
                android:angle="0" /> <!-- Set the default background color -->
            <corners android:radius="8dp" /> <!-- Set the corner radius -->
        </shape>
    </item>
</selector>