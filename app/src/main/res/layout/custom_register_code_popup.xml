<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/text_edit"
    android:layout_margin="10dp"
    android:padding="10dp">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type verification code from email:"
            android:textStyle="bold"
            android:textSize="18dp"
            android:drawableLeft="@drawable/baseline_mail_24"
            android:drawablePadding="4dp"

            />

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/emailEditText"

            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:hint="Type code from your email..."
            android:textAlignment="center"
            android:padding="10dp"/>


        <Button
            android:id="@+id/closeButton"
            android:layout_marginHorizontal="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:background="@drawable/button_confirm_background"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="Veriy Code" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text=""
            app:layout_constraintTop_toBottomOf="@id/topLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            />

    </LinearLayout>

</LinearLayout>